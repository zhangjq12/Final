<script src="../../../public/js/transferImage.js"></script>
<script>
    $(document).ready(function () {
        if ($("div.progress").attr("data-name") != "bidding") {
            if ($("div.progress").attr("data-name") == "waitContract") {
                $(".progress-bar").attr("style", "width: 20%");
                $(".progress-bar").attr("aria-valuenow", "20");
                $("#statusText").text("Wait Contract: 20% completed");
                $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                $(".next-step").html('<button class="btn btn-light" id="contractConfirm">Contract</button>');
                $("#contractConfirm").click(function () {
                    $(location).attr("href", "/exhibitor/contract?id=" + $("#boothId").attr("data-name"));
                });
            }
            else
                if ($("div.progress").attr("data-name") == "waitOppoContract") {
                    $(".progress-bar").attr("style", "width: 40%");
                    $(".progress-bar").attr("aria-valuenow", "40");
                    $("#statusText").text("Wait Vendor Signing The Contract: 40% completed");
                    $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                }
                else
                    if ($("div.progress").attr("data-name") == "waitPayment") {
                        $(".progress-bar").attr("style", "width: 60%");
                        $(".progress-bar").attr("aria-valuenow", "60");
                        $("#statusText").text("Wait Pay: 60% completed");
                        $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                        $(".next-step").html('<button class="btn btn-light" id="paymentBtn">Payment</button>');
                        $("#paymentBtn").click(function () {
                            $(location).attr("href", "/exhibitor/payment?id=" + $("#boothId").attr("data-name"));
                        });
                    }
                    else
                        if ($("div.progress").attr("data-name") == "paid") {
                            $(".progress-bar").attr("style", "width: 80%");
                            $(".progress-bar").attr("aria-valuenow", "80");
                            $("#statusText").text("Paid, Wait Vendor Confirmation: 80% completed");
                            $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                        }
                        else
                            if ($("div.progress").attr("data-name") == "done") {
                                $(".progress-bar").attr("style", "width: 100%");
                                $(".progress-bar").attr("aria-valuenow", "100");
                                $("#statusText").text("Job Done!: 100% completed");
                                $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                            }
                            else {
                                $("#priceTable tbody tr td:eq(2)").html("Confirmed");
                            }
        }
        else {
            $("#statusText").text("Bidding: 0% completed");
        }
        $("#priceTable tbody button").each(function () {
            $(this).bind("click", function () {
                var id = $("#boothId").attr("data-name");
                var vid = $(this).attr("id");
                $.ajax({
                    type: "post",
                    url: "/exhibitor/jobConfirm",
                    dataType: "json",
                    data: {
                        id: id,
                        vendorId: vid
                    },
                    success: function (res) {
                        var vendor = res["vendor"];
                        var exhibitor = res["exhibitor"];
                        var showName = res["showName"];
                        var origin = window.location.hostname;
                        var ws = new WebSocket('ws://' + origin + ':8080');
                        var message = showName + "'s progress is updated! Refresh this page to check you progress!||" + exhibitor + "||" + vendor;
                        ws.onopen = function (e) {
                            ws.send(message);
                        }
                        $(location).attr("href", "/exhibitor/show?id=" + id);
                    },
                    error: function (err) {
                        $(location).attr("href", "error");
                    }
                });
            });
        });
    });
</script>