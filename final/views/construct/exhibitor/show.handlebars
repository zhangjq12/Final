<link rel="stylesheet" href="/public/css/exhibitorShow.css">
<div class="container col-8" id="exhibitorShowPage">
    
    <div class="card">
        {{#each data}}
        <img class="card-img-top" id="topImage" src="/public/image/page/showpageimage.jpg" alt="Card image cap">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 mb-3">
                <div id="boothId" data-name={{boothNum}}></div>
                <h2 class="card-title">Show Name - <span>{{showName}}</span></h2>
                <p class="card-text"><span>Categories - </span>{{category}}</p>
                <h4 class="mb-3">Project Details</h4>
                <div id="detailsShow" class="card-text mb-3">{{details}}</div>
                <div class="next-step">
                
                </div>
                </div>
        <!--</div>

        <div class="card-body col-md-4 mb-3">-->
                <div class="col-md-4 mb-3">
                <div id="exhiProgressColumn">
                    <div class="mb-4 border-0" id="exhiProgressBar">
                        <p id="statusText"></p>
                        <div class="progress" data-name="{{progress}}">
                            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0"
                                aria-valuemax="100">
                            </div>
                        </div>
                    </div>

                </div>
                </div>
            </div>
        </div>

        {{/each}}

        <div class="card-body">
            <h5 class="card-title">Price</h5>
            <table id="priceTable" class="table table-hover">
                <thead>
                    <tr>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Vendor Name</th>
                        <th scope="col">Estimate Price</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody class="table table-hover table-borderless">
                    {{#each price}}
                    <tr>
                        <!--<td><img src="/public/image/vendor/{{Avatar}}" style="height: 30px; width: 30px;"></td>-->
                        <td scope="row" id={{vendorId}}>{{vendorName}}</td>
                        <td>{{price}}</td>
                        <td>
                            <button id={{vendorId}} class="btn btn-light">Confirm</button>
                        </td>
                    </tr>




                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>


