    $(document).ready(function() {
        /*$("#jobProgressTable").find("a").each(function() {
            $(this).on("click", function() {

            });
        });*/
        //const table = document.getElementsByTagName()
        $("#jobProgressTable").find(".collapse").each(function() {
            var data = $(this).html();
            data = data.replace(/&lt;/g, "<");
            data = data.replace(/&gt;/g, ">");
            data = data.replace(/&#x3D;/g, "=");
            data = data.replace(/&quot;/g, '"');
            data = data.replace("<script>", "&lt;script&gt;");
            data = data.replace("<style>", "&lt;style&gt;");
            data = data.replace(/<img src/g, "<img style='max-width:100%;' src");
            $(this).html(data);
        });
        $("#jobExistingTable").find(".collapse").each(function() {
            var data = $(this).html();
            data = data.replace(/&lt;/g, "<");
            data = data.replace(/&gt;/g, ">");
            data = data.replace(/&#x3D;/g, "=");
            data = data.replace("<script>", "&lt;script&gt;");
            data = data.replace("<style>", "&lt;style&gt;");
            data = data.replace(/<img src/g, "<img style='max-width:100%;' src");
            $(this).html(data);
        });
        $(".showExistingNameBtn").each(function() {
            var attr = $(this).attr("data-name");
            attr = "existing" + attr;
            $(this).click(function() {
                $("#" + attr).collapse('toggle');
            });
        });
        $(".showProgressNameBtn").each(function() {
            var attr = $(this).attr("data-name");
            attr = "acc" + attr;
            $(this).click(function() {
                $("#" + attr).collapse('toggle');
            });
        });
        $(".showPriceDe").each(function() {
            var attr = $(this).attr("data-name");
            attr = "cat" + attr;
            $(this).click(function() {
                $("#" + attr).collapse('toggle');
            });
        });

        $(".contractbtn").each(function() {
            var outofdate = false;
            var date1 = new Date($(this).parent().parent().find(".endDate").html());
            var date2 = new Date();
            var yy = date2.getFullYear();
            var mm = date2.getMonth() + 1;
            var dd = date2.getDate();
            var ddd2 = yy + "-" + mm + "-" + dd;
            var date3 = new Date(ddd2);
            if(date1 < date3)
                outofdate = true;
            if($(this).attr("data-name") == "waitContract" && !outofdate) {
                $(this).removeAttr("style");
            }
            $(this).bind("click", function() {
                var link = $(this).attr("data-link");
                $(location).attr("href", link);
            });
        });
        $(".progress-bar").each(function() {
            if($(this).attr("data-name") == "waitContract") {
                $(this).attr("style", "width: 20%");
                $(this).attr("aria-valuenow", "20");
            }
            else 
            if($(this).attr("data-name") == "waitOppoContract") {
                $(this).attr("style", "width: 40%");
                $(this).attr("aria-valuenow", "40");
            }
            else 
            if($(this).attr("data-name") == "waitPayment") {
                $(this).attr("style", "width: 60%");
                $(this).attr("aria-valuenow", "60");
            }
            else 
            if($(this).attr("data-name") == "paid") {
                $(this).attr("style", "width: 80%");
                $(this).attr("aria-valuenow", "80");
            }
            else 
            if($(this).attr("data-name") == "done") {
                $(this).attr("style", "width: 100%");
                $(this).attr("aria-valuenow", "100");
            }
            else {
                $(this).attr("style", "width: 0%");
                $(this).attr("aria-valuenow", "0");
            }
        });
        $(".paidbtn").each(function() {
            var outofdate = false;
            var date1 = new Date($(this).parent().parent().find(".endDate").html());
            var date2 = new Date();
            var yy = date2.getFullYear();
            var mm = date2.getMonth() + 1;
            var dd = date2.getDate();
            var ddd2 = yy + "-" + mm + "-" + dd;
            var date3 = new Date(ddd2);
            if(date1 < date3)
                outofdate = true;
            if($(this).attr("data-name") == "paid" && !outofdate) {
                $(this).removeAttr("style");
            }
            $(this).bind("click", function() {
                var boothId = $(this).attr("data-link");
                var author = $(this).attr("data-author");
                var user = $("#uNameShow").attr("data-name");
                var showName = $(this).attr("data-showName");
                $.ajax({
                    type: "post",
                    url: "/vendor/jobConfirm",
                    dataType: "json",
                    data: {
                        id: boothId,
                        success: "y"
                    },
                    success: function(res) {
                        var origin = window.location.hostname;
                        var ws = new WebSocket('ws://' + origin + ':8080');
                        var message = showName + "'s progress is updated! Refresh this page to check you progress!||" + user + "||" + author;
                        //alert(message);
                        ws.onopen = function(e) {
                            ws.send(message);
                        }
                        $(location).attr("href", "/vendor");
                    },
                    error: function(err) {
                        $(location).attr("href", "error");
                    }
                });
            })
        });
        $(".estimateForm").each(function() {
            //$(this).find("input[type='text']").bind("input propertychange", function(e) {
                //var sum = 0;
                //console.log(sum);
            $(this).find("input[id^='price']").change(function() {
                //console.log(1);
                var sum = 0.00;
                $(this).parent().parent().parent().find("input[id^='price']").each(function() {
                    sum += parseFloat($(this).val() == "" ? 0.00 : $(this).val());
                    //console.log(sum);
                });
                sum = sum.toFixed(2);
                //console.log($(this).val());
                //console.log(sum);
                $(this).parent().parent().parent().find(".totalPriceSpan").html("$" + sum.toString());
            });
                //$(this).find(".totalPriceSpan").html("$&nbsp;&nbsp;" + sum.toString());
            //});
            $(this).submit(function(e) {
                e.preventDefault();
                var boothNum = $(this).find("input[name='id']").val();
                var author = $(this).find("input[name='author']").val();
                var showName = $(this).find("input[name='showName']").val();
                var arr = [];
                $(this).find("input[id^='price']").each(function() {
                    var name = $(this).attr("id").split("+")[1];
                    var num = $(this).attr("id").split("+")[2];
                    var price = parseFloat($(this).val());
                    price = price.toFixed(2);
                    var priceStr = "$" + price.toString();
                    var obj = {"name": name, "num": num, "price": priceStr};
                    arr.push(obj);
                }); 
                var price1 = {"each": arr, "total": $(this).find(".totalPriceSpan").html()};
                var price = JSON.stringify(price1);
                var user = $("#uNameShow").attr("data-name");
                $.ajax({
                    type: "post",
                    url: "/vendor/estimate",
                    dataType: "json",
                    data: {
                        id: boothNum,
                        price: price
                    },
                    success: function(res) {
                        //alert(res);
                        var origin = window.location.hostname;
                        var ws = new WebSocket('ws://' + origin + ':8080');
                        var message = showName + "'s progress is updated! Refresh this page to check you progress!||" + user + "||" + author;
                        ws.onopen = function(e) {
                            ws.send(message);
                        }
                        location.href = "/vendor";
                    },
                    error: function(err) {
                        $(location).attr("href", "error");
                    }
                });
            })
        });
    });
</script>