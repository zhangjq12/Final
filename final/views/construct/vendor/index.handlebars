<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mb-3">
            <h4>Jobs Done or In Progress</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Show Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Progress</th>
                    </tr>
                </thead>
                <tbody class="table table-hover table-borderless">
                    {{#each dataprogress}}
                    <tr>
                        <!--<td><img src="/public/image/vendor/{{Avatar}}" style="height: 30px; width: 30px;"></td>-->
                        <td scope="row"><a href="/vendor/show?id={{boothNum}}">{{showName}}</a></td>
                        <td>{{category}}</td>
                        <td>{{progress}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-6 mb-3">
            <h4>Existing Jobs</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Show Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Estimate Price</th>
                    </tr>
                </thead>
                <tbody class="table table-hover table-borderless">
                    {{#each datajobs}}
                    <tr>
                        <!--<td><img src="/public/image/vendor/{{Avatar}}" style="height: 30px; width: 30px;"></td>-->
                        <td scope="row"><a href="/vendor/show?id={{boothNum}}">{{showName}}</a></td>
                        <td>{{category}}</td>
                        <td>
                            <form method="POST" action="/vendor/estimate">
                                <input type="hidden" name="id" value="{{boothNum}}"></input>
                                <label for="price" class="sr-only">price estimate</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input class="form-control col-md-3" type="text" name="price"/>
                                    <div class="input-group-prepend">
                                        <button type="submit" class="btn btn-light">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>