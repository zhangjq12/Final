<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mb-3">
            <h4>Jobs Done or In Progress</h4>
            <table id="jobProgressTable" class="table table-hover">
                <thead>
                    <tr>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Show Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Progress</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody class="table table-hover table-borderless">
                    {{#each dataprogress}}
                        <!--<div class="author" data-name="{{author}}"></div>-->
                        <tr>
                            <!--<td><img src="/public/image/vendor/{{Avatar}}" style="height: 30px; width: 30px;"></td>-->
                            <td scope="row">
                                <!--<a href="/vendor/#acc{{boothNum}}" data-toggle="collapse" data-parent="#accordion">{{showName}}</a>-->
                                <a href="javascript:void(0);" data-toggle="popover" data-placement="bottom" data-trigger="focus" title="Details" data-content="{{details}}">{{showName}}</a>
                            </td>
                            <td>{{category}}</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar" data-name="{{progress}}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </td>
                            <td>
                                <button data-name="{{progress}}" data-link="/vendor/contract?id={{boothNum}}" class="btn-small btn-light contractbtn" style="display: none;">Contract</button>
                                <button data-name="{{progress}}" data-author="{{author}}" data-link="{{boothNum}}" data-showName="{{showName}}" class="btn-small btn-light paidbtn" style="display: none;">Confirm</button>
                            </td>
                        </tr>
                        <!--<div id="acc{{boothNum}}" class="collapse">
                            <p>
                                {{details}}
                            </p>
                        </div>-->
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-6 mb-3">
            <h4>Existing Jobs</h4>
            <table id="jobExistingTable" class="table table-hover">
                <thead>
                    <tr>
                        <!--<th scope="col"></th>-->
                        <th scope="col">Show Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Size</th>
                        <th scope="col">Estimate Price</th>
                    </tr>
                </thead>
                <tbody class="table table-hover table-borderless">
                    {{#each datajobs}}
                    <tr>
                        <!--<td><img src="/public/image/vendor/{{Avatar}}" style="height: 30px; width: 30px;"></td>-->
                        <td scope="row"><a href="javascript:void(0);" data-toggle="popover" data-placement="bottom" data-trigger="focus" title="Details" data-content="{{details}}">{{showName}}</a></td>
                        <td>{{category}}</td>
                        <td>{{size}}</td>
                        <td>
                            <form class="estimateForm">
                                <input type="hidden" name="id" value="{{boothNum}}"></input>
                                <input type="hidden" name="author" value="{{author}}"></input>
                                <input type="hidden" name="showName" value="{{showName}}"></input>
                                <label for="price" class="sr-only">price estimate</label>
                                <div class="input-group input-group-sm">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input class="form-control col-md-3" type="text" name="price"/>
                                    <div class="input-group-prepend">
                                        <button type="submit" class="btn btn-light">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () { 
        $("[data-toggle='popover']").popover({
            trigger: 'focus'
        });
    });
    $(document).ready(function() {
        /*$("#jobProgressTable").find("a").each(function() {
            $(this).on("click", function() {

            });
        });*/
        //const table = document.getElementsByTagName()
        $(".contractbtn").each(function() {
            if($(this).attr("data-name") == "waitContract") {
                $(this).removeAttr("style");
            }
            $(this).bind("click", function() {
                var link = $(this).attr("data-link");
                $(location).attr("href", link);
            });
        });
        $(".progress-bar").each(function() {
            if($(this).attr("data-name") == "waitContract") {
                $(this).attr("style", "width: 20%");
                $(this).attr("aria-valuenow", "20");
            }
            else 
            if($(this).attr("data-name") == "waitOppoContract") {
                $(this).attr("style", "width: 40%");
                $(this).attr("aria-valuenow", "40");
            }
            else 
            if($(this).attr("data-name") == "waitPayment") {
                $(this).attr("style", "width: 60%");
                $(this).attr("aria-valuenow", "60");
            }
            else 
            if($(this).attr("data-name") == "paid") {
                $(this).attr("style", "width: 80%");
                $(this).attr("aria-valuenow", "80");
            }
            else 
            if($(this).attr("data-name") == "done") {
                $(this).attr("style", "width: 100%");
                $(this).attr("aria-valuenow", "100");
            }
            else {
                $(this).attr("style", "width: 0%");
                $(this).attr("aria-valuenow", "0");
            }
        });
        $(".paidbtn").each(function() {
            if($(this).attr("data-name") == "paid") {
                $(this).removeAttr("style");
            }
            $(this).bind("click", function() {
                var boothId = $(this).attr("data-link");
                var author = $(this).attr("data-author");
                var user = $("#uNameShow").attr("data-name");
                var showName = $(this).attr("data-showName");
                $.ajax({
                    type: "post",
                    url: "/vendor/jobConfirm",
                    dataType: "json",
                    data: {
                        id: boothId,
                        success: "y"
                    },
                    success: function(res) {
                        var origin = window.location.hostname;
                        var ws = new WebSocket('ws://' + origin + ':8080');
                        var message = showName + "'s progress is updated! Refresh this page to check you progress!||" + user + "||" + author;
                        //alert(message);
                        ws.onopen = function(e) {
                            ws.send(message);
                        }
                        $(location).attr("href", "/vendor");
                    },
                    error: function(err) {
                        $(location).attr("href", "error");
                    }
                });
            })
        });
        $(".estimateForm").each(function() {
            $(this).submit(function(e) {
                e.preventDefault();
                var boothNum = $(this).children("input[name='id']").val();
                var author = $(this).children("input[name='author']").val();
                var showName = $(this).find("input[name='showName']").val();
                var price = $(this).find("div input[type='text']").val();
                var user = $("#uNameShow").attr("data-name");
                $.ajax({
                    type: "post",
                    url: "/vendor/estimate",
                    dataType: "json",
                    data: {
                        id: boothNum,
                        price: price
                    },
                    success: function(res) {
                        //alert(res);
                        var origin = window.location.hostname;
                        var ws = new WebSocket('ws://' + origin + ':8080');
                        var message = showName + "'s progress is updated! Refresh this page to check you progress!||" + user + "||" + author;
                        ws.onopen = function(e) {
                            ws.send(message);
                        }
                        location.href = "/vendor";
                    },
                    error: function(err) {
                        $(location).attr("href", "error");
                    }
                });
            })
        });
    });
</script>