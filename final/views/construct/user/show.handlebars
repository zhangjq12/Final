<div class="container">
    {{#each data}}
        <div class="row">
                <!--<h5>User Name:</h5> <p>{{userName}}</p>
                <h5>Email Address:</h5> <p>{{email}}</p>
                <h5>Company Info:</h5> <p>{{companyInfo}}</p>
                <h5>Contact Info:</h5> <p>{{contactInfo}}</p>
                <h5>License Copy:</h5> <p><img style="width: 200px; height: 100px" src="/public/image/license/{{license}}"></p>
                <h5>Personal Copy:</h5> <p><img style="width: 200px; height: 100px" src="/public/image/personal/{{personal}}"></p>
                {{#if stateId}}
                    <h5>State Id:</h5> <p>{{stateId}}</p>
                    <h5>Tax Id:</h5> <p>{{taxId}}</p>
                {{/if}}-->

            <div class="col-9 mb-3">
                <div class="row">
                    <div class="col-4">
                        <h5>Company Name:</h5>
                    </div>
                    <div class="col-6">
                        {{companyInfo}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <h5>Address:</h5>
                    </div>
                    <div class="col-6">
                        {{address}}
                    </div>
                </div><div class="row">
                    <div class="col-4">
                        <h5>Contact Number:</h5>
                    </div>
                    <div class="col-6">
                        {{contactInfo}}
                    </div>
                </div><div class="row">
                    <div class="col-4">
                        <h5>E-mail:</h5>
                    </div>
                    <div class="col-6">
                        {{email}}
                    </div>
                </div>
            </div>
            <div class="col-3 mb-3">
                <img style="width: 200px; height: 100px" src="/public/image/license/{{license}}">
            </div>
        </div>
        {{/each}}
        <div class="row mb-3">
            {{#if comments}}
            <div class="col-3">
                <h5>Total Rating:</h5>
            </div>
            <div class="col-9 totalRating" data-name="{{totalRating}}">

            </div>
            <div class="col-12" style="overflow: auto;">
                <table class="table table-hover" id="commentsZone">
                    <tbody class="table table-hover table-borderless">
                        {{#each comments}}
                        <tr>
                            <td scope="row">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">{{exhibitorName}}&nbsp;&nbsp;<div class="ratingForEach" data-name="{{stars}}"></div></h5>
                                        {{description}}
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{/if}}
        </div>
</div>
<script type="text/javascript" src="../../../public/js/jquery.raty.js"></script>
<script>
    $(document).ready(function() {
        $(".totalRating").raty({
            hints: ['bad', 'poor', 'regular', 'good', 'gorgeous'],
            path: "../../../public/image/stars/",
            half: true,
            halfShow: true,
        });
        $(".totalRating").each(function() {
            var stars = $(this).attr("data-name") == "" ? 0 : parseFloat($(this).attr("data-name"));
            $(this).raty('score', stars);
            $(this).raty('readOnly', true);
        });
        $(".ratingForEach").raty({
            hints: ['bad', 'poor', 'regular', 'good', 'gorgeous'],
            path: "../../../public/image/stars/",
            half: true,
            halfShow: true,
        });
        $(".ratingForEach").each(function() {
            var stars = $(this).attr("data-name") == "" ? 0 : parseFloat($(this).attr("data-name"));
            $(this).raty('score', stars);
            $(this).raty('readOnly', true);
        });
    });
</script>